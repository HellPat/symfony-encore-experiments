{% extends "base.html.twig" %}

{% block head %}
    {{ parent() }}
    
    {% for filePath in encore_entry_css_files('app') %}
        <link rel="stylesheet" href="{{ preload(filePath) }}">
    {% endfor %}
    
    {#{{ encore_entry_link_tags('app') }}#}
{% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('app') }}
{% endblock %}

{% block content %}
    <div>
        <article>
            <h1>Dummy-Inhalt mit Webpack</h1>
